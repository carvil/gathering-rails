.event.row{ style: 'padding-bottom: 8px;' }
  .nine.columns
    .row
      .title.three.columns
        %b= event.title
      .gathering.three.columns
        = event.gathering.name
      .description.six.columns
        = event.description
    .row
      .date.four.columns
        - if event.is_cancelled? 
          = "Cancelled!"
          .strike{style: 'text-decoration:line-through;'}= event.scheduled_at
      .location.eight.columns
        = event.location
  .options.three.columns
    -if show_link
      = link_to( "show", event_path( event ) )
      |
    = link_to( "edit", edit_event_path( event ) )
    |
    = link_to( "delete", event_path( event ), :method => :delete, :confirm => "Are you sure you want to delete?" )