
= form_for( vm.gathering, as: 'gathering', url: gathering_path( vm.gathering ), :html => { class: 'form-horizontal' } ) do |f|

  %fieldset
    %legend
      = vm.gathering.name

    = render 'form', f: f

    .form-actions
      %button{ class: 'button radius', type: 'submit' }
        Save changes
      = link_to "Cancel", gathering_path(vm.gathering), class: 'button radius'
