
= form_for( vm.gathering, as: 'gathering', url: gatherings_path, :html => { class: 'form-horizontal' } ) do |f|

  %fieldset
    %legend
      New Gathering

    = render 'form', f: f

    .form-actions
      %button{ class: 'button', type: 'submit' }
        Create
      = link_to "Cancel", gatherings_path, class: 'button'
